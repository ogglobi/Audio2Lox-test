  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/YOUR_USERNAME/Audio2Lox.git"
  },
  "main": "dist/server.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "scripts": {
