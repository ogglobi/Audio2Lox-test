    "watch": "nodemon",
    "fetch:admin": "node scripts/fetch-admin-dist.mjs",
    "build": "rimraf ./dist && tsc && tsc-alias -p tsconfig.json && npm run fetch:admin",
    "start": "node dist/server.js",
    "test": "ts-node tests/run-tests.ts",
    "release": "semantic-release",
    "prepare": "husky install .husky"
  },
  "keywords": ["loxone", "audio", "powermanager", "usb-relay"],
  "author": "Your Name",
  "license": "Apache-2.0",
