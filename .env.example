# ============================================
# POWERMANAGER CONFIGURATION
# ============================================

# Enable PowerManager for USB Relais control
PM_ENABLED=true

# Serial port for USB Relais
# Linux: /dev/ttyUSB0, /dev/ttyUSB1, etc.
# macOS: /dev/tty.usbserial-*
# Windows: COM3, COM4, etc.
PM_USB_PORT=/dev/ttyUSB0

# Serial baud rate (typically 9600 for ARCELI)
PM_USB_BAUD_RATE=9600

# ARCELI Relais channel (1-8)
PM_CHANNEL=1

# Turn on relais when playback starts
PM_TURN_ON_AT_PLAY=true

# Delay in seconds before turning off relais after playback stops
PM_TURN_OFF_DELAY=5

# ============================================
# GENERAL CONFIGURATION
# ============================================

# Node environment
NODE_ENV=production

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# ============================================
# LOXONE CONFIGURATION (optional)
# ============================================

# Loxone Miniserver IP
LOXONE_IP=192.168.1.100

# Loxone Miniserver credentials
LOXONE_USERNAME=Admin
LOXONE_PASSWORD=your_password_here
