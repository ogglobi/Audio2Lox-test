# EditorConfig helps maintain consistent coding styles across editors and IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 140

[*.ts]
quote_type = single
ij_typescript_imports_wrap = chop_down_if_long
ij_typescript_keep_blank_lines_in_code = 1